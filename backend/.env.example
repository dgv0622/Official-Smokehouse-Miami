# MongoDB Configuration
MONGO_URL=mongodb+srv://username:password@cluster.mongodb.net/smokehouse
DB_NAME=smokehouse

# CORS Configuration
# Use your deployed frontend URL (e.g., https://your-frontend-url.pages.dev)
CORS_ORIGINS=*

# Chatbot (n8n) Configuration
# Optional fallback webhook URL if not set via /api/chat/config
# N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/chat
# API key to authenticate with n8n (if your webhook requires it)
# N8N_API_KEY=your-n8n-api-key
# Customize how to send API key (defaults to X-N8N-API-KEY header)
# N8N_API_KEY_HEADER_NAME=X-N8N-API-KEY
# If your webhook expects API key in query, set the parameter name
# N8N_API_KEY_QUERY_PARAM=api_key
